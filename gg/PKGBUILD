# Maintainer: Quint Guvernator <quint@guvernator.net>

pkgname=gg
pkgver=0.1.0
pkgrel=1

pkgdesc='Shuts down the system in anger.'
url='https://github.com/qguv/gg'
arch=('any')
license=('Apache')

depends=('bash')
source=("https://github.com/qguv/gg/archive/v$pkgver.tar.gz")
sha256sums=('6caf81be5237330e4e79cdeafb050fdbd4a0a0baf7f840bae54aa96c098c2ee8')

package() {
	cd gg-"$pkgver"
	install -Dm755 gg "$pkgdir"/usr/bin/gg
}
